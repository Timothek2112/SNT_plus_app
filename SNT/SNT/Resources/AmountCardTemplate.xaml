<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SNT.Resources.AmountCardTemplate"
             x:Name="Bind"
             BindingContext="{x:Reference Bind}"
             >
    <Frame CornerRadius="30" HasShadow="True" BackgroundColor="{DynamicResource PageSecondaryBackgroundColor}">
        <Grid RowDefinitions="40,40,40,40" ColumnDefinitions="*,*,*">
            <Label x:Name="period_lbl" Grid.Row="0" Text="{Binding period}" Style="{StaticResource ListLabelStyle}"/>
            <Label x:Name="debt_lbl" Grid.Row="1" Text="{Binding debt}" TextColor="Red" Style="{StaticResource ListLabelStyle}"/>
            <Label x:Name="payment_lbl" Grid.Row="2" Text="{Binding payment}" TextColor="Green" Style="{StaticResource ListLabelStyle}"/>
            <Label x:Name="amount_lbl" Grid.Row="3" Text="{Binding amount}" TextColor="{Binding amountColor}" Style="{StaticResource ListLabelStyle}"/>
        </Grid>
    </Frame>
</ContentView>