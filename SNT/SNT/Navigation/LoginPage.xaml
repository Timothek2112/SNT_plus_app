<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SNT"
             xmlns:controls="clr-namespace:SNT"
             x:Class="SNT.LoginPage"
                 Shell.NavBarIsVisible="False"
                 Shell.BackgroundColor="{AppThemeBinding Dark={StaticResource PageBackgroundColorDark}, Light={StaticResource PageBackgroundColorLight}}">

    <RelativeLayout>
        <Frame x:Name="loginFrame"  BackgroundColor="#E9E9E9" CornerRadius="30" HeightRequest="45" WidthRequest="250" HasShadow="True" Padding="3"  RelativeLayout.XConstraint="{ConstraintExpression
            Type=RelativeToParent,
            Property=Width,
            Factor=0.5,
            Constant=-125
            }"
            RelativeLayout.YConstraint="{ConstraintExpression
            Type=RelativeToParent,
            Property=Height,
            Factor=0.4,
            Constant=-22.5}">
            <controls:CustomEntry x:Name="loginEntry" FontAttributes="Bold" Placeholder="Логин"  WidthRequest="200" />
        </Frame>
        
        <Frame x:Name="passwordFrame" Background="#E9E9E9" CornerRadius="30" WidthRequest="250" HasShadow="True" Padding="3"  RelativeLayout.XConstraint="{ConstraintExpression
            Type=RelativeToView,
            ElementName=loginFrame,
            Property=X,
            Factor=1
            }"
            RelativeLayout.YConstraint="{ConstraintExpression
            Type=RelativeToView,
            ElementName=loginFrame,
            Property=Y,
            Factor=1.5}">
            <controls:CustomEntry x:Name="passwordEntry" FontAttributes="Bold" Placeholder="Пароль" IsPassword="True" WidthRequest="200" />
        </Frame>
        
        <Button CornerRadius="30" BackgroundColor="#5d8bf6" FontSize="20" FontAttributes="Bold" Text="Войти" TextColor="White" WidthRequest="200" Clicked="OnLoginClick" RelativeLayout.XConstraint="{ConstraintExpression
            Type=RelativeToView,
            ElementName=passwordFrame,
            Property=X,
            Factor=1.5
            }"
            RelativeLayout.YConstraint="{ConstraintExpression
            Type=RelativeToView,
            Property=Y,
            ElementName=passwordFrame,
            Factor=1.5}"/>
    </RelativeLayout>

</ContentPage>
