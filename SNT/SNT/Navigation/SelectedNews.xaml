<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SNT.Navigation.SelectedNews"
             BackgroundColor="{AppThemeBinding Dark={StaticResource PageBackgroundColorDark}, Light={StaticResource PageBackgroundColorLight}}">
    <NavigationPage.TitleView>
        <Label Grid.Column="1" Grid.Row="1" Style="{StaticResource TitleLabel}" TextColor="{StaticResource NavBarTitle}" Text="Объявления" HorizontalOptions="StartAndExpand"></Label>
    </NavigationPage.TitleView>
    
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Label x:Name="titleLabel" FontSize="40" FontAttributes="Bold" Style="{StaticResource ListLabelStyle}" VerticalOptions="Start" HorizontalOptions="Start" Margin="35,0,0,0"/>
                <Label x:Name="mainTextLabel"  FontAttributes="None" Style="{StaticResource ListLabelStyle}" VerticalOptions="Center" HorizontalOptions="StartAndExpand" Margin="35,20,0,0"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>