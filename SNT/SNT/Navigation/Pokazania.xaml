<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SNT.Navigation.Pokazania">

    <Shell.TitleView>
        <Grid ColumnDefinitions="0.13*,0.6*,0.1*" RowDefinitions="0.15*,0.85*,0*">
            <Label Grid.Column="1" Grid.Row="1" Style="{StaticResource TitleLabel}" Text="Электроэнергия" HorizontalOptions="StartAndExpand"></Label>
        </Grid>
    </Shell.TitleView>

    <ContentPage.ToolbarItems>
        <ToolbarItem Order="Secondary" Text="Настройки"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        
        <StackLayout BackgroundColor="{DynamicResource PageBackgroundColor}">
            
            <ScrollView>
                <StackLayout x:Name="CardList">

                </StackLayout>
            </ScrollView>
        </StackLayout>

    </ContentPage.Content>
</ContentPage>