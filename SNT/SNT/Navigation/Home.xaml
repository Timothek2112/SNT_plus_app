<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SNT.Home"
             NavigationPage.HasBackButton="False"
             Shell.NavBarIsVisible="True"
             Shell.BackgroundColor="{DynamicResource Primary}"
             >
    
    <Shell.TitleView>
        <Grid ColumnDefinitions="0.3*,0.6*,0.1*" RowDefinitions="0.15*,0.85*,0*">
            <Label Grid.Column="1" Grid.Row="1" Style="{StaticResource TitleLabel}" Text="Главная"></Label>
        </Grid>
    </Shell.TitleView>

    <ContentPage.ToolbarItems>
        <ToolbarItem Order="Secondary" Text="Настройки"/>
    </ContentPage.ToolbarItems>
    
    <ScrollView Padding="-10" BackgroundColor="{DynamicResource PageBackgroundColor}">
        <Grid HeightRequest="1000" Padding="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

            <Frame Grid.ColumnSpan="2" Grid.Row="0" Grid.Column="0" CornerRadius="30" BackgroundColor="{DynamicResource PageSecondaryBackgroundColor}">
                <Grid RowDefinitions="0.8*,0.2*"  Padding="-10">
                    <Label Grid.Row="0" Text="Текст" Style="{StaticResource MediumLabelStyle}"/>
                    <Button Grid.Row="1" Text="Подробнее" Margin="-10" CornerRadius="30" Style="{StaticResource FlyoutButtonStyle}"/>
                </Grid>
            </Frame>
            
            <Frame Grid.Row="1" Grid.Column="0" CornerRadius="30" Margin="0, 10, 0, 0" BackgroundColor="{DynamicResource PageSecondaryBackgroundColor}">
                <Grid RowDefinitions="0.8*,0.2*" Padding="-30">
                    <Button  Text="Кнопка"/>
                    <Label Grid.Row="1" Style="{StaticResource MediumLabelStyle}" Text="Электроэнергия" HorizontalOptions="Center"/>
                </Grid>
            </Frame>

            <Frame Grid.Row="1" Grid.Column="1" CornerRadius="30" Margin="0, 10, 0, 0" BackgroundColor="{DynamicResource PageSecondaryBackgroundColor}">
                <Grid RowDefinitions="0.8*,0.2*" Padding="-30">
                    <Button  Text="Кнопка"/>
                    <Label Grid.Row="1" Style="{StaticResource MediumLabelStyle}" Text="Вода" HorizontalOptions="Center"/>
                </Grid>
            </Frame>

            <Frame Grid.Row="2" Grid.Column="0" CornerRadius="30" Margin="0, 10, 0, 0" BackgroundColor="{DynamicResource PageSecondaryBackgroundColor}">
                <Grid RowDefinitions="0.8*,0.2*" Padding="-30">
                    <Button  Text="Кнопка"/>
                    <Label Grid.Row="1" Style="{StaticResource MediumLabelStyle}" Text="Пеня" HorizontalOptions="Center"/>
                </Grid>
            </Frame>

            <Frame Grid.Row="2" Grid.Column="1" CornerRadius="30" Margin="0, 10, 0, 0" BackgroundColor="{DynamicResource PageSecondaryBackgroundColor}">
                <Grid RowDefinitions="0.8*,0.2*" Padding="-30">
                    <Button  Text="Кнопка"/>
                    <Label Grid.Row="1" Style="{StaticResource MediumLabelStyle}" Text="Членские" HorizontalOptions="Center"/>
                </Grid>
            </Frame>

            <Frame Grid.Row="3" Grid.Column="0" CornerRadius="30" Margin="0, 10, 0, 0" BackgroundColor="{DynamicResource PageSecondaryBackgroundColor}">
                <Grid RowDefinitions="0.8*,0.2*" Padding="-30">
                    <Button  Text="Кнопка"/>
                    <Label Grid.Row="1" Style="{StaticResource MediumLabelStyle}" Text="Новости" HorizontalOptions="Center"/>
                </Grid>
            </Frame>

            <Frame Grid.Row="3" Grid.Column="1" CornerRadius="30" Margin="0, 10, 0, 0" BackgroundColor="{DynamicResource PageSecondaryBackgroundColor}">
                <Grid RowDefinitions="0.8*,0.2*" Padding="-30">
                    <Button  Text="Кнопка"/>
                    <Label Grid.Row="1" Style="{StaticResource MediumLabelStyle}" Text="Показания" HorizontalOptions="Center"/>
                </Grid>
            </Frame>

            <Frame Grid.Row="4" Grid.Column="0" CornerRadius="30" Margin="0, 10, 0, 0" BackgroundColor="{DynamicResource PageSecondaryBackgroundColor}">
                <Grid RowDefinitions="0.8*,0.2*" Padding="-30">
                    <Button  Text="Кнопка"/>
                    <Label Grid.Row="1" Style="{StaticResource MediumLabelStyle}" Text="Обращение" HorizontalOptions="Center"/>
                </Grid>
            </Frame>

            <Frame Grid.Row="4" Grid.Column="1" CornerRadius="30" Margin="0, 10, 0, 0" BackgroundColor="{DynamicResource PageSecondaryBackgroundColor}">
                <Grid RowDefinitions="0.8*,0.2*" Padding="-30">
                    <Button  Text="Кнопка"/>
                    <Label Grid.Row="1" Style="{StaticResource MediumLabelStyle}" Text="Настройки" HorizontalOptions="Center"/>
                </Grid>
            </Frame>
    </Grid>
            </ScrollView>
</ContentPage>