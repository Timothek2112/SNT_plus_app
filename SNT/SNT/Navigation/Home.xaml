<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SNT.Home"
             NavigationPage.HasBackButton="False"
             Shell.NavBarIsVisible="True"
             Shell.BackgroundColor="{DynamicResource Primary}"
             Title="Главная"
             >

    <ScrollView Padding="-10" BackgroundColor="{DynamicResource PageBackgroundColor}">
        <Grid HeightRequest="1000" Padding="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

            <Frame Grid.ColumnSpan="2" Grid.Row="0" Grid.Column="0" CornerRadius="30" BackgroundColor="{DynamicResource PageSecondaryBackgroundColor}">
                <Label Text="Модальные страницы - зло. Не используйте их никогда" Style="{StaticResource MediumLabelStyle}"></Label>
        
        </Frame>

            <Frame Grid.Row="1" Grid.Column="0" CornerRadius="30" Margin="0, 10, 0, 0" BackgroundColor="{DynamicResource PageSecondaryBackgroundColor}">

        </Frame>

            <Frame Grid.Row="1" Grid.Column="1" CornerRadius="30" Margin="0, 10, 0, 0" BackgroundColor="{DynamicResource PageSecondaryBackgroundColor}">

        </Frame>

            <Frame Grid.Row="2" Grid.Column="0" CornerRadius="30" Margin="0, 10, 0, 0" BackgroundColor="{DynamicResource PageSecondaryBackgroundColor}">
            
        </Frame>

            <Frame Grid.Row="2" Grid.Column="1" CornerRadius="30" Margin="0, 10, 0, 0" BackgroundColor="{DynamicResource PageSecondaryBackgroundColor}">

        </Frame>

            <Frame Grid.Row="3" Grid.Column="0" CornerRadius="30" Margin="0, 10, 0, 0" BackgroundColor="{DynamicResource PageSecondaryBackgroundColor}">

        </Frame>

            <Frame Grid.Row="3" Grid.Column="1" CornerRadius="30" Margin="0, 10, 0, 0" BackgroundColor="{DynamicResource PageSecondaryBackgroundColor}">

        </Frame>

            <Frame Grid.Row="4" Grid.Column="0" CornerRadius="30" Margin="0, 10, 0, 0" BackgroundColor="{DynamicResource PageSecondaryBackgroundColor}">

        </Frame>

            <Frame Grid.Row="4" Grid.Column="1" CornerRadius="30" Margin="0, 10, 0, 0" BackgroundColor="{DynamicResource PageSecondaryBackgroundColor}">

        </Frame>
    </Grid>
            </ScrollView>
</ContentPage>